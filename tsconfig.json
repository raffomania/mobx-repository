{
    "compilerOptions": {
        "target": "ES2017",
        "module": "commonjs",
        "moduleResolution": "Node",
        "declaration": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "experimentalDecorators": false,
        "sourceMap": true,
        "outDir": "dist",
        "esModuleInterop": true,
        "useDefineForClassFields": true,
        "downlevelIteration": true
    },
    "include": ["./src"]
}
